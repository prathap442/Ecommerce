<%if !(@wishlist.errors.any?)%>
     console.log('no errors are there');
     setTimeout(function(){
	     $('#wishlist_errors').slideUp();
	     $('#wishlist_notice').hide();
	     $.growl({message: 'the wishlist was successfully added'});
     },3000)
         $('#wishlists_counter').html('Wishlists<%=Wishlist.where({user_id: current_user.id}).pluck(:product_id).uniq.count%>');
         $('#wishlist_adder').append( '<%=escape_javascript render 'wishlist'%>')
         $('#wishlist_notice').html('the wishlist was added successfully added');

<%else%>
     $('#wishlist_errors').append('<%=escape_javascript render 'errors'%>');
     setTimeout(function(){
     	$('#wishlist_notice').slideUp()
     },1000)
     $('#wishlist_notice').html('the wishlist was not added successfully added');
<%end%>     
